.footer-menu
  width 215px
  margin-right 30px
  float left

  &_position_last
    margin-right 0

  &__header
    font bold 14px/1.6 $addition_font
    color #fff
    -webkit-font-smoothing antialiased
    text-transform uppercase
    position relative
    margin 0
    padding 0 0 4px 10px

    &:before, &:after
      content ''
      position absolute
      bottom 0
      height 1px
      left 0
      width 155px

    &:before
      background #4e624e
      bottom 1px

    &:after
      background #ccdfcc

  &__list
    list-style none
    margin 10px 0 0 10px
    padding 0

  &__item
    padding 0 0 8px 15px
    position relative
    color #fdfdfc

    &:before
      content ''
      position absolute
      icons-sprite($footer-menu-bubble)
      top 4px
      left -5px

  &__link
    color #fdfdfc!important
    font 14px/1.6 $addition_font

    &:hover
      text-decoration none

  &__contacts
    list-style none
    margin 10px 0 0 10px
    padding 0
    font 14px/1.6 $addition_font

  &__contacts-item
    padding 0 0 8px 15px
    position relative
    color #fdfdfc

    A
      color #fff
      text-decoration none

    &:before
      content ''
      position absolute
      left 0
      top 0

    &_type_address
      &-link
        color #fff!important
        text-decoration none

        &:hover
          text-decoration underline

      &:before
        icons-sprite($map-pointer)
        left -20px

    &_type_phones:before
      icons-sprite($footer-phone)
      left -21px

    &_type_mail:before
      icons-sprite($footer-mail)
      left -23px
