.basket-sidebar
  position relative
  margin-bottom 50px

  &__list
    list-style none
    margin 23px 0 0
    border 1px solid #98A598
    border-radius 5px
    padding 35px 12px
    box-sizing border-box
    width 240px
    clearfix()

  &__item
    border-bottom 1px solid #6E7C6E
    overflow hidden
    padding 10px 0

    &:first-child
      border-top 1px solid #6E7C6E

  &__image
    float left
    margin-right 6px

  &__item
    &-info
      line-height 1.4
      width 147px
      float left

    &-name
      color #0C555D
      line-height 1.2
      display inline-block
      overflow hidden
      height 30px

    &-cost
      font 14px/17px 'Sensation'
      background #EBF6EB
      border 1px solid #A1B1A1
      padding 0 5px
      color #0C555D

      .rur
        position relative

        &:before
          content ''
          position absolute
          left 0
          right 3px
          height 1px
          background #0C555D
          top 10px

    &-delete
      display inline-block
      icons-sprite($delete-small)
      position relative
      top 3px
      margin-left 5px

  &__total
    clearfix()

  &__total-caption
    margin 5px 0 10px
    text-align right
    font-size 18px
    text-transform uppercase
    color #0C555D

  &__panel
    background #EBF6EB
    border 1px solid #0C555D
    border-radius 3px
    padding 10px 15px 10px 5px

  &__panel-caption
    text-transform uppercase
    color #6E7C6E
    font-size 18px
    margin 15px 0 0
    position relative

    &_type_address
      padding-left 40px

      &:before
        content ''
        position absolute
        top 2px
        left 6px
        icons-sprite($address)

    &_type_delivery
      padding-left 40px

      &:before
        content ''
        position absolute
        top 2px
        left 2px
        icons-sprite($pickups)

    &_type_payment
      padding-left 40px
      padding-top 4px
      padding-bottom 4px

      &:before
        content ''
        position absolute
        top 2px
        left 0
        icons-sprite($cashs)

  &__value
    margin 0 0 0 40px
    color #0C555D
    font-size 18px
    line-height 1.2

    &_align_right
      text-align right

  &__panel-item
    border-bottom 1px solid #0C555D
    padding-bottom 7px
    margin-left 13px

    &_type_last
      border none
