.news-list
  list-style none
  margin 0
  padding 0

  &__item
    width 100%
    margin-bottom 33px
    clearfix()

  &__image
    border 1px solid #98A598
    border-radius 3px
    display block

    &-wrap
      border-bottom 1px solid #0C555D
      border-radius 3px
      float left
      margin-right 10px

  &__info-wrap
    border 1px solid #98A598
    border-radius 3px
    margin-left 235px
    padding 15px 18px
    box-sizing border-box
    height 152px
    position relative

    &:before
      content ''
      position absolute
      border-bottom 1px solid #0C555D
      border-radius 3px
      bottom -2px
      left 0
      right 0
      height 6px

  &__caption
    padding 0
    -webkit-font-smoothing antialiased

    &-link
      font bold 18px/1.2 $addition_font
      text-decoration none

      &:hover
        text-decoration underline

  &__date
    icons-sprite($cost-sticker)
    background-repeat no-repeat
    color #6e7c6e
    display block
    position absolute
    right 15px
    $top = (@height/2 * -1) - 2
    top $top
    text-align center
    $line-height = @height - 2
    font bold 14px/$line-height $addition_font
    padding-top 2px
    -webkit-font-smoothing antialiased

  &__description
    line-height 1.4

