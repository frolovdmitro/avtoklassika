.auth-popup
  position absolute
  top 100%
  right 0
  width 302px
  background #EBF6EB
  border 1px solid #0C555D
  border-radius 3px
  padding 25px 25px 20px
  box-sizing border-box
  z-index 99
  opacity 0
  visibility hidden
  transform translate3d(0, -20px, 0)
  transition all .3s ease-in-out

  &_state_invisible
    display none

  &_state_visible
    opacity 1
    visibility visible
    transform translate3d(0, 0, 0)

  &:before
    position absolute
    z-index 3
    content ""
    height 0
    width 0
    top -17px
    right 23px
    margin-left -12px
    border 9px solid rgba(0, 0, 0, 0)
    border-bottom 8px solid #EBF6EB

  &:after
    position absolute
    z-index 2
    content ""
    height 0
    width 0
    top -19px
    right 22px
    border 10px solid rgba(0, 0, 0, 0)
    border-bottom 8px solid #6E7C6E

  &__input
    width 100%
    box-sizing border-box
    border 1px solid #9FAF9F
    border-top 2px solid #9FAF9F
    text-indent 13px

    &-wrap
      width 100%

      &_type_password
        padding-bottom 5px!important

  &__form
    border-bottom 1px solid #6E7C6E
    padding-bottom 10px
    position relative

    &:before
      content ''
      position absolute
      bottom -2px
      height 1px
      left 0
      right 0
      background #fff

  &__remember
    line-height 1
    font-size 14px
    margin-left 14px

  &__submit
    margin 20px auto 6px

  &__lost-password
    text-align center

    &-link
      color #6E7C6E
      font-size 12px

      &:hover
        color #6E7C6E
        text-decoration none

    &_type_main
      position absolute
      bottom 0
      left 127px

  &__register
    text-align center

    &-link
      text-transform lowercase
      font-size 18px
      line-height 1.2
      font-weight bold

      &:hover
        text-decoration none

  &__social
    text-align center
    margin 17px 0 20px

    &-caption
      margin 0
      text-transform uppercase
      color #6E7C6E
      font-size 12px
      font-weight bold
      line-height 1

    &-list
      margin 20px 0 0
      padding 0
      list-style none

      &_type_wide
        float right
        margin 0 50px 0 0

        .auth-popup__social-item
          margin-left 20px

    &-item
      display inline-block

    &-link
      display block
      width 50px
      height 50px
      overflow hidden
      text-indent -999px

  &__gmail-icon
    social-sprite($gmail)

  &__facebook-icon
    social-sprite($facebook)

  &__twitter-icon
    social-sprite($twitter)

  &__vk-icon
    social-sprite($vk)

  &__odnoklassniki-icon
    social-sprite($odnoklassniki)

  &__lost-text
    display none
    margin-top -6px
    line-height 1.3

    &_state_visible
      display block

    &_type_main
      height 67px
      margin-left 128px!important
      margin-top -5px!important
