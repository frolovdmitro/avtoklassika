.breadcrumbs
  list-style none
  margin 0
  padding 0

  &_type_path
    display none

  &__item
    display inline-block
    position relative
    padding-left 25px
    color #6e7c6e
    font-size 14px
    margin-right 11px

    &:before
      content ''
      position absolute
      top 2px
      left 0
      icons-sprite($breadcrumbs-separator)

    &_type_home:before
      top 3px
      icons-sprite($breadcrumbs-home)

    &_style_italic
      font-style italic

  &__link
    text-decoration none

    &_type_upper
      text-transform uppercase

    &:hover
      text-decoration underline

