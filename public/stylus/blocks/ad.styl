.ad
  margin 15px 0 30px
  overflow hidden
  position relative

  &__image-wrap
    float left
    margin-right 20px

  &__image
    border 1px solid #0C555D
    display block
    border-radius 3px
    position relative

    IMG
      display block

    &:before
      content ''
      position absolute
      border-bottom 1px solid #0C555D
      bottom -2px
      left 0
      right 0
      border-radius 3px
      height 6px

    &:after
      content ''
      position absolute
      bottom 5px
      right 5px
      icons-sprite($zoom)

  &__info-wrap
    float left
    width 385px
    clearfix()

  &__caption
    padding 0 0 10px
    line-height 1.3

  &__cost
    display inline-block
    margin 0 0 10px
    height 27px
    background #E6F3E6
    border 1px solid #6E7C6E
    padding 0 18px
    color #0c555d
    font bold 18px/28px $addition_font
    text-transform uppercase
    -webkit-font-smoothing antialiased
    position relative

    &:before
      content: ''
      position absolute
      icons-sprite($button-right-rail-light)
      top 0
      right -10px

    .rur
      position relative

      &:before
        content ''
        position absolute
        left 0
        right 3px
        height 2px
        background #0C555D
        top 12px

  &__date
    icons-sprite($cost-sticker)
    background-repeat no-repeat
    color #6e7c6e
    display block
    position absolute
    right 0
    top -40px
    text-align center
    $line-height = @height - 2
    font bold 14px/$line-height $addition_font
    padding-top 2px
    -webkit-font-smoothing antialiased

  &__text
    margin-bottom 10px

  &__thumbnails
    list-style none
    margin 20px 0 0
    padding 0
    width 302px

  &__thumbnails-item
    border 1px solid #98a598
    border-radius 2px
    width 62px
    height 62px
    box-sizing border-box
    text-align center
    display table
    float left
    background #fff
    margin 0 18px 15px 0

    &:nth-child(4)
      margin-right 0

  &__thumbnail-link
    display table-cell
    vertical-align middle
    font-size 0
    line-height 0

  &__thumbnail-image
    display inline-block

  &__other-cost
    icons-sprite($ribbon-two-sided)
    height 33px
    position absolute
    display block
    text-transform uppercase
    font-size 18px
    text-align center
    line-height 30px
    bottom -17px
    left 50%
    margin-left -80px
    color #0c555d

    .rur
      position relative

      &:before
        content ''
        position absolute
        left 0
        right 3px
        height 2px
        background #0C555D
        top 12px

  &__other-image
    border 1px solid #0C555D
    border-radius 3px

  &__add-button
    display block
    icons-sprite($ribbon-red)
    color #fff!important
    text-decoration none
    line-height @height
    margin 1px 0 20px
    text-shadow 0 1px rgba(12, 85, 93, .7)
    font-size 14px
    font-weight bold
    text-align center
    text-transform uppercase

    &:hover
      color #fff

  &__submit
    float right
    clear both
