.detail-info
  width 100%
  margin 22px 0 60px
  clearfix()

  &__image-wrap
    display table
    text-align center
    height 217px
    width 318px

  &__image-block
    border 1px solid #98a598
    border-radius 3px
    width 340px
    height 262px
    box-sizing border-box
    position relative
    padding 31px 10px 10px
    float left
    margin-right 20px

    &:after
      content ''
      position absolute
      bottom 5px
      right 5px
      icons-sprite($zoom)

    &_state_no-image:after
      display none

  &__image-link
    display table-cell
    vertical-align middle
    z-index 9999
    transition transform .4s linear .3s, opacity .9s linear
    width 318px
    height 217px

    &.type_fly
      transform scale(0, 0)
      opacity .2

  &__article
    font bold 18px $addition_font
    color #0c555d
    position absolute
    background #fff
    top 10px
    left 10px

  &__thumbnails
    list-style none
    margin 0
    padding 0
    position absolute
    bottom -32px
    left 10px

  &__thumbnails-item
    border 1px solid #98a598
    border-radius 2px
    width 62px
    height 62px
    box-sizing border-box
    text-align center
    display table
    float left
    background #fff
    margin-right 10px

  &__thumbnail-link
    display table-cell
    vertical-align middle

  &__thumbnail-image
    display block

  &__schema
    border 1px solid #98a598
    border-radius 3px
    width 340px
    height 262px
    box-sizing border-box
    position relative
    float left
    transition opacity .4s ease-in-out

    &_state_invisible
      opacity 0

    &:after
      content ''
      position absolute
      bottom 5px
      right 5px
      icons-sprite($zoom)

    &_state_no-image
      text-align center
      line-height 260px
      font-size 21px

      &:after
        display none

  &__schema-link
    position relative
    display block
    width 338px
    height 260px
    overflow hidden

  &__schema-image
    position absolute

  &__schema-coord-wrap
    display none
    visibility hidden

  &__schema-coord
    position absolute
    display block
    color #fff!important
    text-decoration none
    line-height 26px
    text-align center
    z-index 10
    font-size 14px
    cursor pointer
    icons-sprite($schema-point-yes)

    &_state_current
      icons-sprite($schema-point-active)

    &_state_no
      icons-sprite($schema-point)
      color #666!important

  &__schema-actions
    list-style none
    margin 0
    padding 0
    position absolute
    bottom -37px
    right 0

    &-item
      display inline-block
      text-align right
      font-size 14px
      margin-left 22px

    &-link
      text-decoration none
      padding-left 23px
      position relative

      &_type_send:before
        content ''
        position absolute
        top 4px
        left 0
        icons-sprite($mail)

      &_type_print:before
        content ''
        position absolute
        top 2px
        left 0
        icons-sprite($print)


  &__buy-block
    border 1px solid #98a598
    border-radius 3px
    width 220px
    height 262px
    float right
    box-sizing border-box
    padding 0
    text-align center
    position relative

    &-inner
      display table
      width 220px
      height 262px

      &-cell
        display table-cell
        vertical-align middle

  &__cost
    color #0c555d
    font bold 32px/48px $addition_font
    white-space nowrap
    text-shadow 0 1px rgba(252, 252, 252, .7)
    icons-sprite($cost-ribbon)
    position relative
    left -10px
    padding 0 30px
    box-sizing border-box
    margin-bottom 5px
    text-align center

    &_state_disabled
      text-transform uppercase
      font-size: 14px
      font-weight: normal

  &__basket-button
    color #fff!important
    display block
    text-decoration none
    font bold 18px/48px $addition_font
    text-shadow 0 1px rgba(12, 85, 93, .75)
    icons-sprite($basket-ribbon)
    position relative
    right -25px
    padding 0 30px 0 78px
    box-sizing border-box
    margin-bottom 5px
    text-align left
    text-transform uppercase

    &_state_disabled
      color #bfd0bf!important
      text-shadow 0 1px #fff
      icons-sprite($basket-ribbon-disabled)

  &__buy-fast
    display inline-block
    color #e25851!important
    font-size 14px
    position relative
    text-indent 20px

    &:hover
      text-decoration none

    &:before
      content ''
      position absolute
      top 4px
      left 0
      icons-sprite($buy-fast)

    &_state_disabled
      color #888!important

      &:before
        opacity .3

  &__input-wrap
    margin-bottom 14px
    width 80%
    margin-left 10%
    margin-right 10%

  .rur
    position relative

    &:before
      content ''
      position absolute
      left 0
      right 3px
      height 3px
      background #0C555D
      top 22px
