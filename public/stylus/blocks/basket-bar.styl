.basket-bar
  float right
  position relative
  margin-right 15px
  color #0c555d
  text-decoration none
  font 24px $pfdin_font
  line-height 65px
  padding 4px 0 0 40px
  text-shadow 0 1px rgba(252, 252, 252, .7)

  &:before
    position absolute
    content ''
    top 50%
    left 0
    icons-sprite($basket)
    background-repeat no-repeat
    $top = @height/2 * -1
    margin-top unit($top, 'px')

  &__sum_type_decimal
    color #9eae9e

  &_state_disabled
    pointer-events none
    cursor default

  &__notifier
    position absolute
    font-size 11px
    color #FFF
    top 43px
    background linear-gradient(top, #CD4D47, #FF6860)
    padding 3px 4px 2px
    text-shadow none
    border-radius 5px
    border 2px solid #F6F9F9
    box-shadow 0px 1px 1px rgba(0, 0, 0, 0.45)
    line-height 1
    left 16px

    &.pulse
      animation pulse .6s 1
  &__sum

    .rur
      position relative

      &:before
        content ''
        position absolute
        left 0
        right 3px
        height 2px
        background #0C555D
        top 17px

@keyframes pulse
  0%
    transform scale(1, 1)
  50%
    transform scale(1.3, 1.3)
  100%
    transform scale(1, 1)
