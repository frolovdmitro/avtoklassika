.basket-steps
  font-size 18px
  list-style none
  margin 0
  padding 0
  display inline-block
  margin-bottom 20px
  position relative

  &:before
    content ''
    position absolute
    top 2px
    right 0
    bottom 0
    z-index 1
    icons-sprite($basket-crumb-last)

  &__item
    display inline-block
    padding-left 15px
    padding-right 25px
    background #fff
    border-top 1px solid #6E7C6E
    border-bottom 2px solid #6E7C6E
    line-height 38px
    position relative

    &:before
      content ''
      position absolute
      top -1px
      right 0
      bottom 0
      icons-sprite($basket-crumb-separator)

    &_type_caption
      color #fff
      padding-right 15px!important
      text-transform uppercase
      text-shadow 0 1px rgba(3, 28, 31, 0.9)
      border none
      background-color transparent!important
      background-repeat repeat-x
      top 1px
      z-index 1
      margin-right 5px

    &_state_active
      background #ccdfcc

      &:before
        icons-sprite($basket-crumb-separator-active)

      &:after
        content ''
        position absolute
        top -1px
        left -13px
        bottom 0
        icons-sprite($basket-crumb-separator-lactive)

      .basket-steps__link
        color #0C555D!important

      .basket-steps__num
        color #0C555D!important
        border-color #0C555D

    &_pos_last.basket-steps__item_state_active:before
      icons-sprite($basket-crumb-separator-lastactive)
      z-index 5

  &__link
    text-decoration none
    color #505d50!important

  &__num
    display inline-block
    width 22px
    height 22px
    border 2px solid #505d50
    border-radius 20px
    line-height 24px
    text-align center
    margin-right 10px
    position relative
    top 1px
    color #505d50!important

  &__add-comment
    text-decoration underline
    font-size 18px
    color #6e7c6e
    padding-left 20px
    position relative
    margin-top 5px
    float left

    &:before
      content ''
      position absolute
      top 2px
      left 0
      icons-sprite($edit-small)

    &:hover
      color #6e7c6e

  &__comment-delivery-wrap
    clearfix()
    clear both

  &__create-btn
    font-size 18px!important
    margin 10px auto 0

  &__comment-textarea
    margin-top 10px
    max-height 0
    opacity 0
    transition all .3s ease-in-out

    &_type_visible
      max-height 200px
      opacity 1
