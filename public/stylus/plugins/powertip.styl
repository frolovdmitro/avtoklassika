#powerTip
  border 2px solid $link_color
  color $text_color
  font-size 14px
  line-height 1.4
  min-width 300px
  background #fff
  white-space normal
  border-radius 2px

  &.n:before
    border-top-color $link_color

  &.e:before
    border-right-color $link_color

  &.s:before
    border-bottom-color $link_color

  &.w:before
    border-left-color $link_color

  &.ne:before, &.nw:before
    border-top-color $link_color

  &.se:before, &.sw:before
    border-bottom-color $link_color

  &.nw-alt:before, &.ne-alt:before, &.sw-alt:before, &.se-alt:before
    border-top-color $link_color

  &.sw-alt:before, &.se-alt:before
    border-bottom-color $link_color
